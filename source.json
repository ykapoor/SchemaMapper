 {
    "schema": "http://json-schema.org/draft-07/schema#",
    "title": "Endur Trade Database",
    "type": "object",
    "properties": {
      "trades": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "tradeId": {
              "type": "string",
              "description": "Unique identifier for the trade."
            },
            "tradeType": {
              "type": "string",
              "description": "Type of trade (e.g., 'buy', 'sell', 'swap')."
            },
            "tradeDate": {
              "type": "string",
              "format": "date-time",
              "description": "Date and time when the trade was executed."
            },
            "counterparty": {
              "type": "string",
              "description":
                  "Name or ID of the counterparty involved in the trade."
            },
            "product": {
              "type": "object",
              "properties": {
                "productId": {
                  "type": "string",
                  "description": "Unique identifier for the product."
                },
                "productType": {
                  "type": "string",
                  "description":
                      "Type of product (e.g., 'commodity', 'currency', 'security')."
                },
                "quantity": {
                  "type": "number",
                  "description": "Quantity of the product traded."
                },
                "price": {
                  "type": "number",
                  "description": "Price per unit of the traded product."
                }
              },
              "required": ["productId", "productType", "quantity", "price"]
            },
            "tradeStatus": {
              "type": "string",
              "enum": ["pending", "confirmed", "settled", "reversed"],
              "description": "Current status of the trade."
            },
            "settlementDate": {
              "type": "string",
              "format": "date",
              "description": "Date when the trade settlement occurs."
            },
            "createdBy": {
              "type": "string",
              "description": "User or system that created the trade."
            },
            "createdDate": {
              "type": "string",
              "format": "date-time",
              "description": "Date and time when the trade record was created."
            },
            "notes": {
              "type": "string",
              "description": "Optional notes related to the trade."
            }
          },
          "required": [
            "tradeId",
            "tradeType",
            "tradeDate",
            "counterparty",
            "product",
            "tradeStatus",
            "createdBy",
            "createdDate"
          ]
        }
      },
      "counterparties": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "counterpartyId": {
              "type": "string",
              "description": "Unique identifier for the counterparty."
            },
            "name": {
              "type": "string",
              "description": "Name of the counterparty."
            },
            "contactInfo": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "format": "email",
                  "description": "Contact email address."
                },
                "phone": {"type": "string", "description": "Phone number."}
              },
              "required": ["email"]
            }
          },
          "required": ["counterpartyId", "name"]
        }
      }
    }
  }
